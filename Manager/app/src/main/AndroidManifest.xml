<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="apps.merciless.charactermanager" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CharcterListListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharcterListDetailActivity"
            android:label="@string/title_charcterlist_detail"
            android:parentActivityName=".CharcterListListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CharcterListListActivity" />
        </activity>
        <activity
            android:name=".CharacterSheet"
            android:label="@string/title_activity_character_sheet" >
        </activity>
    </application>

</manifest>
